# Denuel Voice Bridge - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8000
WORKERS=4

# Authentication
VOICE_BRIDGE_SECRET_KEY=your-super-secret-key-change-me
VOICE_BRIDGE_ADMIN_KEY=vb_admin_your-custom-admin-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Redis (optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# Monitoring (optional)
SENTRY_DSN=

# Grafana
GRAFANA_PASSWORD=admin

# Model Configuration
WHISPER_MODEL=base
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
